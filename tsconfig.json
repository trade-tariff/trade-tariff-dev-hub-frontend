{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "outDir": "./dist",
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts",
    "eslint.config.mjs",
    "globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
