    {% endset %}
    {{ govukCookieBanner({
        ariaLabel: "Cookies on Commodity Code Identification Tool Developer Hub ",
        messages: [
            {
            headingText: "Cookies on Commodity Code Identification Tool Developer Hub ",
            html: html,
            actions: [
                {
                text: "Accept additional cookies",
                type: "submit",
